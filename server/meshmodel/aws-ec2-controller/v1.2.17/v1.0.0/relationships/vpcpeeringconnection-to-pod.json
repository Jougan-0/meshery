{
  "schemaVersion": "relationships.meshery.io/v1alpha3",
  "version": "v1.0.0",
  "kind": "edge",
  "type": "non-binding",
  "subType": "network",
  "selectors": [
    {
      "allow": {
        "from": [
          {
            "kind": "VPCPeeringConnection",
            "model": {
              "name": "ec2",
              "registrant": {
                "kind": "aws"
              }
            },
            "patch": {
              "patchStrategy": "merge",
              "mutatorRef": [
                [
                  "spec",
                  "peerVpcId"
                ]
              ],
              "description": "The VPC Peering Connection allows Pods from different VPCs to communicate."
            }
          }
        ],
        "to": [
          {
            "kind": "Pod",
            "model": {
              "name": "kubernetes",
              "registrant": {
                "kind": "artifacthub"
              }
            },
            "patch": {
              "patchStrategy": "replace",
              "mutatedRef": [
                [
                  "spec",
                  "nodeSelector",
                  "vpc-peering"
                ]
              ],
              "description": "Pods are configured to route traffic through a VPC Peering Connection for cross-VPC communication."
            }
          }
        ]
      }
    }
  ]
}
